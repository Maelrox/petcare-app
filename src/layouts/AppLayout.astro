---
//import Menu from '../components/layout/Menu.astro';
import Spinner from '../components/common/spinners/Spinner';
import Footer from '../components/layout/Footer.astro';
import Header from '../components/layout/Header.astro';
import Toast from '../components/common/toasters/Toast';
import Menu from '../components/common/menu/Menu';

interface Props {
  title: string;
  includeMenu?: boolean;
}
const { title, includeMenu = true } = Astro.props;

---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Open Source Pet Care System" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
      body {
        font-family: 'Quicksand', sans-serif;
      }
      ::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 10px;
      }
      ::-webkit-scrollbar-thumb {
        background: #888;
        border-radius: 10px;
      }
      ::-webkit-scrollbar-thumb:hover {
        background: #555;
      }
      ::-webkit-scrollbar {
        width: thin;
      }
      html {
        scrollbar-width: thin;
        scrollbar-color: #0c2a34 #f1f1f1;
      }
      .floating-back-button {
        position: fixed;
        bottom: 16px;
        right: 16px;
        width: 50px;
        height: 50px;
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        cursor: pointer;
        z-index: 1000;
      }
      .floating-back-button svg {
        width: 24px;
        height: 24px;
      }
    </style>
  </head>
  <body class="bg-white flex flex-col min-h-screen">
    <Spinner client:load />
    <Toast client:load />
    <div class="flex flex-1 flex-col">
      <Header username="?" />
      {includeMenu && 
        <Menu client:load />
      }
      <main class="flex-1 overflow-y-auto w-full m-auto">
        <slot />
      </main>
      <Footer />
      {!includeMenu && (
        <div class="floating-back-button bg-color_brand hover:bg-skyblue_dark" data-back-button>
          <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
        </div>
      )}
    </div>
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const backButton = document.querySelector('[data-back-button]');
        if (backButton) {
          backButton.addEventListener('click', () => {
            window.history.back();
          });
        }
      });
    </script>
  </body>
</html>
